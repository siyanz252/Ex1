color bgColor = color(255,182,193);
float circleSize = 100;
String message = "Good Morning!";


void setup() {
  size(800, 600, P2D); 
  background(bgColor);
  textAlign(CENTER);
  
}

void draw() {  
  text(message, mouseX, mouseY);
  if (mousePressed) {
    rectMode(CENTER);
    fill(70, 130, 180);
    stroke(100, 149, 237);
    line(mouseX, mouseY, pmouseX, pmouseY);
  
  }
  
}
